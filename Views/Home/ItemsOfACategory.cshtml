@{
    ViewBag.Title = "ItemsOfACategory";
}
@{
    string[] items = ViewBag.items;
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4><i class="fa fa-fw fa-check"></i>@ViewBag.headingTitle</h4>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        @for (int k = 0, j = 0; k < items.Length @*&& j < categories.Length/4+1*@; j++)
        {
            <div class="row">
                @for (int i = 0; i < 4 && k < items.Length; i++, k++)
                {
                    <div class="col-md-3">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h4><i class="fa fa-fw fa-check"></i> @(items[i])</h4>
                            </div>
                            <div class="panel-body">
                                <div align="center"><p style="align-items:center"><button type="button" class="btn btn-default disabled">Price Rs:@("250")</button></p></div>
                                <a href=@("/Home/ItemsOfACategory/?type="+items[i]) class="thumbnail">
                                    <img style="max-height:100px" src=@("/Images/" + i % items.Length + ".jpg") class="img-rounded">
                                </a>
                                <div align="center">
                                    <p>
                                        <a href="@("/Home/ItemsOfACategory/?type="+items[i])" class="btn btn-primary">Add to cart</a>
                                        <a href="#" class="btn btn-default"><span class="glyphicon glyphicon-heart"></span>&emsp;Like</a>
                                    </p>

                                </div>

                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>






