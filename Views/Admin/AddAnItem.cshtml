
@{
    ViewBag.Title = "AddAnItem";
    Layout = "~/Views/Shared/_AdminView.cshtml";
}


<div class="container">

    <div class="row">
        @*shows a white strip at the top*@
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading ">
                    <h4><i class="fa fa-fw fa-check"></i> @ViewBag.headingTitle</h4>
                </div>
            </div>
        </div>


    </div>


    <form id="loginform" class="form-horizontal" role="form" style="border:dotted">
        <br /><br />
        @*<div class="form-group">
            <label for="email" class="col-md-3 control-label">Email</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="email" placeholder="Email Address">
            </div>
        </div>*@
        <div class="form-group">
            <label for="firstname" class="col-md-3 control-label">Name</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="firstname" placeholder="Gloves">
            </div>
        </div>
        <div class="form-group">
            <label for="lastname" class="col-md-3 control-label">Category</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="lastname" placeholder="Cricket">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="col-md-3 control-label">Price</label>
            <div class="col-md-9">
                <input type="password" class="form-control" name="passwd" placeholder="300">
            </div>
        </div>

        <div class="form-group">
            <label for="icode" class="col-md-3 control-label">Company name</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="icode" placeholder="PK Sports">
            </div>
        </div>
        <div class="form-group">
            <label for="icode" class="col-md-3 control-label">Quantity</label>
            <div class="col-md-9">
                <input type="text" class="form-control" name="icode" placeholder="22">
            </div>
        </div>


        <div class="form-group">

            <div class="col-md-offset-3 col-md-9">
                <button id="btn-signup" type="button" class="btn btn-info"> &nbsp Add Item</button>

            </div>
        </div>


    </form>



</div>

